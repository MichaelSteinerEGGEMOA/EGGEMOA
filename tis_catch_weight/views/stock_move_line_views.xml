<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_stock_move_line_tree_catchweight">
            <field name="name">stock.move.line.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="catch_weight_ok" invisible="1"/>
                    <field name="product_cw_uom_qty" string="CW Reserved"
                           invisible="not context.get('show_reserved_quantity')" readonly="1"
                           groups="tis_catch_weight.group_catch_weight"/>
                    <field name="cw_qty_done" string="CW Done"
                           attrs="{'readonly': ['|', '|','|', ('is_initial_demand_editable', '=', True), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True), ('in_entire_package', '=', True), ('catch_weight_ok', '=', False)]}"
                           groups="tis_catch_weight.group_catch_weight"/>
                    <field name="product_cw_uom"
                           attrs="{'readonly': ['|', '|','|',('product_cw_uom_qty', '!=', 0.0), ('in_entire_package', '=', True),('catch_weight_ok', '=', False)]}"
                           options="{'no_open': True, 'no_create': True}"
                           groups="tis_catch_weight.group_catch_weight"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_move_line_form_catchweight">
            <field name="name">stock.move.line.form.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="before">
                    <label for="product_cw_uom_qty" string="CW Reserved" attrs="{'invisible': [('state', '=', 'done')]}"
                           groups="tis_catch_weight.group_catch_weight"/>
                    <div class="o_row" attrs="{'invisible': [('state', '=', 'done')]}">
                        <field name="product_cw_uom_qty" groups="tis_catch_weight.group_catch_weight"/>
                        <field name="product_cw_uom" options="{'no_create': True}" string="CW Unit of Measure"
                               groups="tis_catch_weight.group_catch_weight"/>
                    </div>
                    <label for="cw_qty_done" string="CW Done" groups="tis_catch_weight.group_catch_weight"/>
                    <div class="o_row">
                        <field name="cw_qty_done" groups="tis_catch_weight.group_catch_weight"/>
                        <field name="product_cw_uom" options="{'no_create': True}" string="Unit of Measure"
                               groups="tis_catch_weight.group_catch_weight"/>
                    </div>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_move_line_product_tree_cw_">
            <field name="name">stock.move.line.tree.cw.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="catch_weight_ok" groups="tis_catch_weight.group_catch_weight" invisible="1"/>
                    <field name="cw_qty_done" string="CW-Quantity Done"
                           attrs="{'readonly': [('catch_weight_ok', '=', False)]}"
                           groups="tis_catch_weight.group_catch_weight"/>
                    <field name="product_cw_uom" options="{'no_open': True, 'no_create': True}"
                           attrs="{'readonly': [('catch_weight_ok', '=', False)]}"
                           groups="tis_catch_weight.group_catch_weight"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_quant_package_form_catchweight">
            <field name="name">stock.quant.package.form.inherit</field>
            <field name="model">stock.quant.package</field>
            <field name="inherit_id" ref="stock.view_quant_package_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='current_picking_move_line_ids']/tree/field[4]" position="after">
                    <field name="catch_weight_ok"  invisible="1"/>
                    <field name="product_cw_uom_qty" groups="tis_catch_weight.group_catch_weight"
                           attrs="{'invisible': [('catch_weight_ok', '=', False)]}"/>
                    <field name="cw_qty_done" groups="tis_catch_weight.group_catch_weight"
                           attrs="{'invisible': [('catch_weight_ok', '=', False)]}"/>
                    <field name="product_cw_uom" groups="tis_catch_weight.group_catch_weight"
                           attrs="{'invisible': [('catch_weight_ok', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>