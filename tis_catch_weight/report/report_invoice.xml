<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_invoice_catchweight" inherit_id="account.report_invoice_document">
		<xpath expr="//table[@name='invoice_line_table']/thead/tr/th[3]" position="after">
			<th class="text-right" groups="tis_catch_weight.group_catch_weight">CW QTY</th>
		</xpath>
		<xpath expr="//table[@name='invoice_line_table']/tbody/tr/td[3]" position="after">
			<td class="text-right" groups="tis_catch_weight.group_catch_weight">
				<span t-field="l.product_cw_uom_qty"/>
				<span t-field="l.product_cw_uom"/>
			</td>
		</xpath>
		<xpath expr="//table[@name='invoice_line_table']/tbody/tr[2]/td[3]" position="after">
			<td></td>
		</xpath>
	</template>
</odoo>