<?xml version='1.0' encoding='utf-8' ?>
<odoo>
  <data>
    <record id="eggemoa_product_template_form" model="ir.ui.view">
      <field name="name">Eggemoa Product template form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <group name="sale" position="inside">
          <group name="secondary_unit" string="Invoicing Unit">
            <field name="secondary_uom_id" />
            <field
              name="secondary_uom_ratio"
              attrs="{'required': [('secondary_uom_id', '!=', False)]}"
            />
          </group>
        </group>
      </field>
    </record>
  </data>
</odoo>
